{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "es2022",
    "module": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noEmit": true
  },
  "include": ["**/*.js", "**/*.ts", "**/*.svelte"]
}
